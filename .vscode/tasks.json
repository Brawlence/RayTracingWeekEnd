{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build current file",
            "type": "shell",

            "windows":{
                "options": {
                    "cwd": "C:/msys2/mingw64/bin/",
                    //"shell": {
                    //      "executable": "C:/msys2/mingw64.exe",
                    ////      "args": ["/d", "/c"]   // - windws CMD args, don't use for mingw64
                    //},
                },
                "command": "g++.exe",
                "args": ["-g", "\"${file}\"", "-o", "\"${workspaceFolder}\\test.exe\""]
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": ["-g", "'${workspaceFolder}/${file}'", "-o", "'${workspaceFolder}/test'"]
            },

            "group": "build"
        },
        {
            "label": "Build main",
            "type": "shell",

            "windows":{
                "options": {
                    "cwd": "C:/msys2/mingw64/bin/",
                    //"shell": {
                    //      "executable": "C:/msys2/mingw64.exe",
                    ////      "args": ["/d", "/c"]   // - windws CMD args, don't use for mingw64
                    //},
                },
                "command": "g++.exe",
                "args": ["-g", "\"${workspaceFolder}\\main.cc\"", "-o", "\"${workspaceFolder}\\main.exe\""]
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": ["-g", "'${workspaceFolder}/main.cc'", "-o", "'${workspaceFolder}/main'"]
            },

            "group": {"kind": "build", "isDefault": true}
        }
    ]
}