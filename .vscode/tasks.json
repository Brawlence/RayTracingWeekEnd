{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo ${workspaceFolder}"
        },
        {
            "label": "Build",
            "type": "shell",

            "windows":{
                "options": {
                    "cwd": "C:/msys2/mingw64/bin/",
                    //"shell": {
                    //      "executable": "C:/msys2/mingw64.exe",
                    ////      "args": ["/d", "/c"]   // - windws CMD args, don't use for mingw64
                    //},
                },
                "command": "g++.exe",
                "args": ["-g", "\"${workspaceFolder}\\*.cpp\"", "-lsfml-graphics", "-lsfml-window", "-lsfml-system", "-DFMT_HEADER_ONLY", "-o", "\"${workspaceFolder}\\main.exe\""]
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": ["-g", "'${workspaceFolder}/*.cpp'", "-std=c++11", "-lsfml-graphics", "-lsfml-window", "-lsfml-system", "-lfmt", "-lpthread", "-o", "'${workspaceFolder}/main'"]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {"kind": "build", "isDefault": true}
        },
        {
            "label": "Build (release)",
            "type": "shell",

            "windows":{
                "options": {
                    "cwd": "C:/msys2/mingw64/bin/",
                    //"shell": {
                    //      "executable": "C:/msys2/mingw64.exe",
                    ////      "args": ["/d", "/c"]   // - windws CMD args, don't use for mingw64
                    //},
                },
                "command": "g++.exe",
                "args": ["-g", "\"${workspaceFolder}\\main.cpp\"", "-lsfml-graphics", "-lsfml-window", "-lsfml-system", "-DFMT_HEADER_ONLY", "-O3", "-o", "\"${workspaceFolder}\\main.exe\""]
            },
            "linux": {
                "command": "/usr/bin/g++",
                "args": ["-g", "'${workspaceFolder}/main.cpp'", "-std=c++11", "-lsfml-graphics", "-lsfml-window", "-lsfml-system", "-lfmt", "-lpthread", "-O3", "-o", "'${workspaceFolder}/main'"]
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": "build"
        }
    ]
}