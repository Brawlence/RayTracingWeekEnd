    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug this",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build current file",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "windows":{
                "miDebuggerPath": "C:/Program Files/MinGW/bin/gdb.exe",
                "program": "${workspaceFolder}/test.exe",
                "args": []
            },
            "linux":{"miDebuggerPath": "/usr/bin/gdb",                
                "program": "${workspaceFolder}/test",
                "args": []
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
